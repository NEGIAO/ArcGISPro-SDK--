<controls:ProWindow x:Class="CCTool.Scripts.CusTool.SearchSameField"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
        mc:Ignorable="d"
        Title="搜索相同字段值的图斑" Height="280" Width="400" 
                    WindowStartupLocation="CenterScreen"
                    Icon="/CCTool;component/Data/Icons/Atoolbox.png"
    >
    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CCTool;component/Data/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>
    <Grid>
        <ComboBox x:Name="combox_fc" Style="{StaticResource ComboBox_icon}" Margin="91,19,15,0" VerticalAlignment="Top" Height="25" DropDownOpened="combox_fc_DropDown"/>
        <Label Content="要素图层：" HorizontalAlignment="Left" Margin="16,19,0,0" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="btn_go" Style="{StaticResource btn_run}" Margin="0,0,15,24"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="btn_go_Click"  />

        <Button x:Name="btn_help" Style="{StaticResource btn_help}" Margin="0,0,99,24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="btn_help_Click"/>
        <ComboBox x:Name="combox_field_from" Style="{StaticResource ComboBox_icon}" Margin="91,55,15,0" VerticalAlignment="Top" DropDownOpened="combox_field_from_DropDown" Height="25"/>
        <Label Content="搜索字段：" HorizontalAlignment="Left" Margin="15,55,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="textDis" Margin="91,131,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Height="22" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="75"/>
        <Label Content="搜索半径：" HorizontalAlignment="Left" Margin="15,129,0,0" VerticalAlignment="Top" Width="71"/>
        <Label Content="米" HorizontalAlignment="Left" Margin="171,129,0,0" VerticalAlignment="Top" Width="71"/>
        <ComboBox x:Name="combox_field_bz" Style="{StaticResource ComboBox_icon}" Margin="91,90,15,0" VerticalAlignment="Top" DropDownOpened="combox_field_bz_DropDown" Height="25"/>
        <Label Content="标记字段：" HorizontalAlignment="Left" Margin="15,90,0,0" VerticalAlignment="Top" Width="71"/>

    </Grid>
</controls:ProWindow>
